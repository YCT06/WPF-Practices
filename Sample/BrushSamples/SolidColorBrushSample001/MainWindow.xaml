<Window x:Class="SolidColorBrushSample001.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SolidColorBrushSample001"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    
    <WrapPanel >
        <WrapPanel.Resources >
            <Style TargetType="Border">
                <Setter Property="Width" Value="100"/>
                <Setter Property="Height"  Value="100"/>
                <Setter Property="Margin" Value="8"/>
            </Style>
        </WrapPanel.Resources>
        <Border Background="Blue"/>
        <Border Background="#FFFF0000"/>
        <Border Background="#00FFFF" />
        <Border Background="#FFF0" />
        <Border Background="#000" />
        <Border Background="sc#1,0.3,1,0.9" />
        <Border Background="sc#1,0.6,0.6" />
    </WrapPanel>
</Window>
