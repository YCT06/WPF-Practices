<Window x:Class="ImageBrushSample001.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageBrushSample001"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Margin="16" BorderBrush="Black" BorderThickness="5">
            <Border.Background >
                <ImageBrush ImageSource="Images/1.jpg" />
            </Border.Background>
        </Border>
        <Border Margin="16" BorderBrush="Black" BorderThickness="5" Grid.Row="1">
            <Border.Background >
                <ImageBrush ImageSource="Images/1.jpg" Stretch="Uniform" />
            </Border.Background>
        </Border>
    </Grid>
</Window>
