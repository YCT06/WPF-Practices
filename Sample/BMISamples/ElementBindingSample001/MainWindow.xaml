<Window x:Class="ElementBindingSample001.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElementBindingSample001"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel >
            <Slider Width="120" Margin="12" x:Name="myslider" HorizontalAlignment="Left"/>
            <TextBlock Text="{Binding ElementName=myslider, Path=Value}" Margin="12,0,0,0" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Window>
