<Window x:Class="BorderSample001.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BorderSample001"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Margin="16" BorderThickness="2" BorderBrush="Blue"/>

        <Border Grid.Row="1" Margin="16" Background="CadetBlue">
            
        </Border>      
        <Border Grid.Row="2" Margin="16" BorderThickness="15,4,8,0" 
                BorderBrush="YellowGreen" Background="BlanchedAlmond" />

    </Grid>
</Window>
